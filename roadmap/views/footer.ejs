        function checkLogin() {
            $.get('/auth/status', function(data) {
                if (!data.logged_in) {
                    window.location.href = '/login';
                }
            });
        }

        // Initialize toastr options
        toastr.options = {
            "closeButton": true,
            "debug": false,
