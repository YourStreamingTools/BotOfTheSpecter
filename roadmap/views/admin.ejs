<%- include('header') %>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h1 class="text-4xl font-bold mb-2">Admin Panel</h1>
        <p class="text-blue-200 mb-8">Database Management & Schema Validation</p>

        <!-- Status Overview -->
        <div class="mb-8 bg-white bg-opacity-10 backdrop-blur-md rounded-lg p-8 shadow-lg">
            <h2 class="text-2xl font-semibold mb-6">Database Status</h2>
            <div id="db-status" class="space-y-4">
                <!-- Status will be loaded here -->
            </div>
            <div class="mt-6">
                <button id="check-db-btn" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg font-medium">
                    <i class="fas fa-sync mr-2"></i>Check Database
                </button>
                <button id="fix-db-btn" class="bg-green-600 hover:bg-green-700 px-4 py-2 rounded-lg font-medium ml-4">
                    <i class="fas fa-wrench mr-2"></i>Fix Database
                </button>
            </div>
        </div>

        <!-- Issues Section -->
        <div id="issues-section" class="mb-8 bg-white bg-opacity-10 backdrop-blur-md rounded-lg p-8 shadow-lg hidden">
            <h2 class="text-2xl font-semibold mb-6 text-red-300">Issues Found</h2>
            <div id="issues-list" class="space-y-2">
                <!-- Issues will be listed here -->
            </div>
        </div>

        <!-- Data Cleanup Section -->
        <div class="mb-8 bg-white bg-opacity-10 backdrop-blur-md rounded-lg p-8 shadow-lg">
            <h2 class="text-2xl font-semibold mb-6">Data Cleanup</h2>
            <p class="text-blue-200 mb-4">Remove all completed items from the database. This action cannot be undone.</p>
            <button id="clear-completed-btn" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg font-medium">
                <i class="fas fa-trash mr-2"></i>Clear All Completed Items
            </button>
        </div>

        <!-- Tables Details -->
        <div class="mb-8 bg-white bg-opacity-10 backdrop-blur-md rounded-lg p-8 shadow-lg">
            <h2 class="text-2xl font-semibold mb-6">Database Tables</h2>
            <div id="tables-info" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Table info will be loaded here -->
            </div>
        </div>
    </div>

    <script>
        function checkDatabase() {
            $.get('/api/db-admin', function(status) {
                renderDbStatus(status);
            }).fail(function(xhr) {
                toastr.error(xhr.responseJSON?.error || 'Failed to check database');
            });
        }

        function renderDbStatus(status) {
            const container = $('#db-status');
            container.empty();

            // Database existence
            const dbStatus = status.database_exists ?
                '<span class="text-green-300">✓ Database exists</span>' :
                '<span class="text-red-300">✗ Database missing</span>';
            container.append(`<div>Database: ${dbStatus}</div>`);

            // Tables status
            if (status.database_exists && status.tables) {
                Object.entries(status.tables).forEach(([table, exists]) => {
                    const tableStatus = exists ?
                        '<span class="text-green-300">✓ Exists</span>' :
                        '<span class="text-red-300">✗ Missing</span>';
                    container.append(`<div>Table '${table}': ${tableStatus}</div>`);
                });
            }

            // Issues
            if (status.issues && status.issues.length > 0) {
                $('#issues-list').empty();
                status.issues.forEach(issue => {
                    $('#issues-list').append(`<div class="text-red-300">• ${issue}</div>`);
                });
                $('#issues-section').removeClass('hidden');
            } else {
                $('#issues-section').addClass('hidden');
            }
        }

        function fixDatabase() {
            $.ajax({
                url: '/api/db-admin',
                method: 'POST',
                success: function(response) {
                    toastr.success(response.message || 'Database fixed successfully');
                    checkDatabase();
                },
                error: function(xhr) {
                    toastr.error(xhr.responseJSON?.error || 'Failed to fix database');
                }
            });
        }

        function clearCompletedItems() {
            Swal.fire({
                title: 'Are you sure?',
                text: 'This will permanently delete all completed items. This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete them!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/api/clear-completed-items',
                        method: 'POST',
                        success: function(response) {
                            toastr.success(response.message);
                        },
                        error: function(xhr) {
                            toastr.error(xhr.responseJSON?.error || 'Failed to clear completed items');
                        }
                    });
                }
            });
        }

        $(document).ready(function() {
            checkDatabase();

            $('#check-db-btn').click(checkDatabase);
            $('#fix-db-btn').click(fixDatabase);
            $('#clear-completed-btn').click(clearCompletedItems);
        });
    </script>

<%- include('footer') %>