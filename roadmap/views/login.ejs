<%- include('header') %>

<body class="bg-gradient-to-br from-blue-600 to-blue-800 text-white min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full mx-4">
        <div class="bg-white bg-opacity-10 backdrop-blur-md rounded-lg p-8 shadow-lg">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold mb-2">Welcome Back</h1>
                <p class="text-blue-200">Sign in with Twitch to access the roadmap</p>
            </div>

            <div class="space-y-4">
                <a href="/auth/twitch" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-3 px-4 rounded-lg flex items-center justify-center transition-colors">
                    <i class="fab fa-twitch mr-3"></i>
                    Continue with Twitch
                </a>
            </div>

            <div class="mt-8 text-center">
                <p class="text-sm text-blue-200">
                    By signing in, you agree to our terms of service and privacy policy.
                </p>
            </div>
        </div>
    </div>

    <script>
        // Check if already logged in
        $(document).ready(function() {
            $.get('/auth/status', function(data) {
                if (data.logged_in) {
                    window.location.href = '/';
                }
            });
        });
    </script>

<%- include('footer') %>